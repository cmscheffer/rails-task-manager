<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <%= f.submit %>
<% end %>

<%= link_to "Back to list", tasks_path %>
